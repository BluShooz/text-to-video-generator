{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/main.py"
        },
        {
            "src": "/health",
            "dest": "/api/main.py"
        },
        {
            "src": "/docs",
            "dest": "/api/main.py"
        },
        {
            "src": "/openapi.json",
            "dest": "/api/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ],
    "env": {
        "APP_API_HOST": "0.0.0.0",
        "APP_API_PORT": "8000"
    }
}