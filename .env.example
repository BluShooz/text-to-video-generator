# Environment Configuration
# Copy this to .env and fill in your values

# API Settings
APP_API_HOST=0.0.0.0
APP_API_PORT=8000

# GPU Settings
APP_CUDA_VISIBLE_DEVICES=0
APP_TORCH_DTYPE=float16

# Video Generation Settings
VIDEO_MODEL_ID=THUDM/CogVideoX-2b
VIDEO_HEIGHT=480
VIDEO_WIDTH=720
VIDEO_NUM_FRAMES=49
VIDEO_FPS=8
VIDEO_GUIDANCE_SCALE=6.0
VIDEO_NUM_INFERENCE_STEPS=50
VIDEO_ENABLE_CPU_OFFLOAD=true
VIDEO_ENABLE_VAE_TILING=true

# TTS Settings
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
TTS_LANGUAGE=en

# Lip Sync Settings
LIPSYNC_CHECKPOINT_PATH=checkpoints/wav2lip_gan.pth
LIPSYNC_STATIC_FPS=25

# Upscaler Settings
UPSCALE_MODEL_NAME=RealESRGAN_x4plus
UPSCALE_SCALE=4
UPSCALE_TILE_SIZE=400
